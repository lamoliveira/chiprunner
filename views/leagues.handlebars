
<div class="table-responsive col-md-12">
  <h2 class="pb-2 border-bottom" style="text-align: center; border-bottom-color: #1c0603 !important;">Leagues</h2>

  <table style="border-color: #1c0603" class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Created</th>
      </tr>
    </thead>
    <tbody>
      {{#each league }}
      <tr>
        <td>{{name}}</td>
        <td>{{description}} </td>
        <td>{{createdAt}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>